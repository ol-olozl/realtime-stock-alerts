# Symbols & polling
SYMBOLS=005930,NVDA,AVGO
PRICE_POLL_INTERVAL_SEC=2
ALERT_DEFAULT_THRESHOLD_PCT=5
TZ=Asia/Seoul

# Kafka
# For local host scripts use localhost:29092 (advertised external listener)
# For in-container services use kafka:9092
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC_PRICES=stock_prices
KAFKA_TOPIC_ALERTS=alerts

# ClickHouse
CH_HOST=clickhouse
CH_PORT=9000          # clickhouse-client uses TCP 9000
CH_USER=default
CH_PASSWORD=
CH_DB=markets

# Alerts / SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASSWORD=app_password
ALERT_EMAIL_TO=you@example.com

# Feature toggles
ENABLE_KAFKA_ALERTS=false
ENABLE_KAFKA_CONSUMER=false
